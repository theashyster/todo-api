{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES5", "ES6"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/types/*.ts"]
}
